<h1 class="ml-4">STEP 1</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2">
        </div>
        <div class="col-md-4 col-xl-4">
            <section>
                <%= form_with(model: @project_overview, url: backend_project_pacer_project_overviews_path, local: true) do |form|  %>
                <div class="form-group">
                    <%= form.label :title, 'Project title'  %>
                    <%= form.text_field :title, style: 'display: block' %>
                </div>
                <div class="form-group">
                    <%= form.label :introduction_text, 'Introduction text' %>
                    <%= form.text_field :introduction_text, style: 'display: block'  %>
                </div>
                <div class="form-group">
                    <%= form.label :description, 'Description' %>
                    <%= form.text_area :description, style: 'display: block'  %>
                </div>
                <div class="form-group">
                    <div>
                        <%= form.submit 'Next', class: 'btn btn-outline-dark' %>
                    </div>
                    <br>
                    <% if flash[:alert_1] %>
                    <ul class="badge">
                        <p class="alert alert-danger"><%= flash[:alert_1] %></p>
                    </ul>
                    <% end %>
                </div>
                <% end %>
            </section>
        </div>
    </div>
</div>
