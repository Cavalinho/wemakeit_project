<h1 class="ml-4">STEP 4</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2">
        </div>
        <div class="col-md-10 col-xl-10">
            <section>
                <%= form_with(model: @project_owner, url: backend_project_pacer_project_owners_path, local: true) do |form|  %>
                <div class="form-group">
                    <%= form.label :owner_name  %>
                    <%= form.text_field :owner_name, style: 'display: block'  %>
                </div>
                <div class="form-group">
                    <%= form.label :owner_email %>
                    <%= form.text_field :owner_email, style: 'display: block'  %>
                </div>
                <div class="form-group">
                    <div>
                        <%= form.submit 'Next', class: 'btn btn-outline-dark' %>
                    </div>
                    <br>
                    <% if flash[:alert_4] %>
                    <ul class="badge">
                        <p class="alert alert-danger"><%= flash[:alert_4] %></p>
                    </ul>
                    <% end %>
                </div>
                <% end %>
            </section>
        </div>
    </div>
</div>
