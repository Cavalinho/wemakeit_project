<h1 class="ml-4">Add Pledge</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2">
        </div>
        <div class="col-md-4 col-xl-4">
            <section>
                <%= form_with(model: @pledge, url:  backend_project_pledges_path(@project), local: true) do |form|  %>
                <div class="form-group">
                    <%= form.label :title  %>
                    <%= form.text_field :title, style: 'display: block'   %>
                </div>
                <div class="form-group">
                    <%= form.label :amount %>
                    <%= form.text_field :amount, style: 'display: block'   %>
                </div>
                <div class="form-group">
                    <%= form.label :description %>
                    <%= form.text_area :description, style: 'display: block'   %>
                </div>
                <div class="form-inline">
                    <div class="form-group mr-4">
                        <%= link_to 'Skip adding Pledge', backend_path , class: 'btn btn-outline-dark' %>
                    </div>
                    <div class="form-group ml-4">
                        <%= form.submit 'Save Pledge', class: 'btn btn-outline-dark'  %>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <% if flash[:alert_5] %>
                    <ul class="badge">
                        <p class="alert alert-danger"><%= flash[:alert_5] %></p>
                    </ul>
                    <% end %>
                </div>
                <% end %>
            </section>
        </div>
    </div>
</div>
